void setup()  {
  Serial1.begin(9600);
  pinMode(led13, OUTPUT);
}

void loop()  {
  if (Serial1.available()) {
    recibido = Serial1.read();

    switch (recibido) {
      case 'a': digitalWrite(led13, HIGH);
        break;
      case 'b': digitalWrite(led13, LOW);
        break;

    }
  }
}
